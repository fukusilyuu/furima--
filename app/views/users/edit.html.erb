<%= link_to image_tag("images/furima-logo-color.png", class:"furima-icon-edit"), "/" %>
<div class='update-user'>
 <div class='share-update-user'> 
  <div class="share-update-lists">
   <h3 class='share-h3'>変更</h3>
   <%= form_with model: @user, local: true do |f| %>
   <div class='share-weight-bold-text'>
    <h5 class="share-context-edit">お名前</h5>
    <h6 class='share-indispensable'>必須</h6>
   </div>
    <%=f.text_field :nickname, class:'share-context2'%>
   <div class='share-weight-bold-text'>
    <h5 class="share-context-edit">メールアドレス</h5>
    <h6 class='share-indispensable'>必須</h6>
   </div>
    <%= f.email_field :email, class:'share-context2', id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    <div class='share-weight-bold-text'>
    <h5 class="share-context-edit">パスワード</h5>
    <h6 class='share-indispensable'>必須</h6>
   </div>
    <%= f.password_field :password, length: { maximum: 6 }, class:'share-context2', id:"password", placeholder:"6文字以上の半角英数字" %>
    <div class='share-weight-bold-text'>
    <h5 class="share-context-edit">パスワード(確認)</h5>
    <h6 class='share-indispensable'>必須</h6>
   </div>
    <%= f.password_field :encrypted_password, class:'share-context2', id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    <div class='share-weight-bold-text'>
    <h5 class="share-context-edit">お名前(全角)</h5>
    <h6 class='share-indispensable'>必須</h6>
   </div>
    <%= f.text_area :firstname_kanji, class:'share-context3', id:"first-name", placeholder:"例) 山田" %>
    <%= f.text_area :lastname_kanji, class:'share-context3', id:"last-name", placeholder:"例) 陸太郎" %>
    <br>
    <div class='share-weight-bold-text'>
    <h5 class="share-context-edit">お名前カナ(全角)</h5>
    <h6 class='share-indispensable'>必須</h6>
   </div>
    <%= f.text_area :firstname_katakana, class:'share-context4', id:"first-name-kana", placeholder:"例) ヤマダ" %>
    <%= f.text_area :lastname_katakana, class:'share-context4', id:"last-name-kana", placeholder:"例) リクタロウ" %>
    <br>
    <div class='share-weight-bold-text'>
    <h5 class="share-context-edit">生年月日</h5>
    <h6 class='share-indispensable'>必須</h6>
   </div>
    <div class='date-select-edit'>
     <%= raw sprintf(
                  f.date_select(
                    :birth_date,
                    class:'share-context2',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
   </div>
   <div class='share-sell-btn-contents'>
    <%= f.submit "変更する", class:"share-sell-btn" %>
   <% end %>
   <br>

  <%= link_to "もどる", item_path(:id),data: { turbo_method: :post }, class:"share-back-btn" %>
   </div>
  </div>
 </div>
</div>
